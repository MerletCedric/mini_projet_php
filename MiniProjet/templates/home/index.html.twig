{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div id="menu_accueil">
        <form method="get" action="#">
            <div class="input-group mb-3">
                <input type="text" name="nom_ville_search" class="form-control" placeholder="Ville de départ ?" aria-label="Recipient's username" aria-describedby="basic-addon2">
                <button class="input-group-text" type="submit" name="ville_search" id="basic-addon2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                        <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
